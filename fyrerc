#!/bin/mksh
#
# wildefyr - 2015 (c) wtfpl
# source file for global variables across the environment

# Global variables
ROOT=$(lsw -r)
SW=$(wattr w $ROOT)
SH=$(wattr h $ROOT)

PFW=$(pfw)
CUR=${2:-$(pfw)}
maxHorizontalWindows=4

BW=${BW:-2}
ACTIVE=${ACTIVE:-0x2E8B57}
INACTIVE=${INACTIVE:-0x000000}
WARNING=${INACTIVE:-0xC64552}

W=$(wattr w $CUR 2&> /dev/null)
H=$(wattr h $CUR 2&> /dev/null)

originalX=$((20))
originalY=$((20))
X=$originalX
Y=$originalY
TermW=462
TermH=260

XGAP=${XGAP:-$((X))}
IGAP=${IGAP:-$((10 + BW))}
VGAP=${VGAP:-$((BW))}
TGAP=${TGAP:-$((Y + 20))}
BGAP=${BGAP:-$((Y + BW))}

# Global Files
if [ ! -d /.config/fyre/groups ]; then
    mkdir -p /.config/fyre/groups
fi

GROUPSDIR=${GROUPSDIR:-/.config/fyre/groups}

FSFILE=${FSFILE:-/.config/fyre/fullinfo}
WLFILE=${WLFILE:-/.config/fyre/windowList}
MPVFILE=${MPVFILE:-/.config/fyre/mpvFile}
WLFILETEMP=${WLFILETEMP:-/.config/fyre/windowTemp}

# vim: set ft=sh :
