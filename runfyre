#!/bin/sh
#
# wildefyr - 2016 (c) MIT
# fyre initialisation and run loop

. fyrerc

eventually &
layouts -o 0
screens

while true; do
    sleep "$DURATION"

    mpvid="$(wid.sh mpv)"
    test ! -z "$mpvid" && {
        printf '%s\n' "$(wattr xywhi ${mpvid})" > "$MPVPOS"
    } || {
        test -f "$MPVPOS" && rm -f "$MPVPOS"
    }
done
