#!/bin/sh
#
# File       : /home/wildefyr/fyre/winopen
# Maintainer : Wildefyr | http://wildefyr.net
# Copyright  : Wildefyr | Licensed under the WTFPL license.

wid=$1
windowC=$(wclass c $wid)
windowP=$(wclass p $wid)

if [[ $windowC == "vol" ]]; then
    position md $wid
elif [[ $windowP == *"sshserver"* ]]; then
    position mid $wid
    transset-df -i $wid 0.75
    wgroups -s $wid 3
elif [[ $windowC == "vdpau" ]]; then
    tile
elif [[ $windowC == "xv" ]]; then
    tile
elif [[ $windowC == "gl" ]]; then
    tile
else
    position tll $wid
    transset-df -i $wid 0.75
fi
