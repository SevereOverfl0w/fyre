#!/bin/sh
#
# wildefyr - 2016 (c) MIT
# test window classes when being opened

ARGS="$@"

usage() {
    cat << EOF
Usage: $(basename $0) [wid]
EOF

    test $# -eq 0 || exit $1
}

main() {
    . fyrerc

    case $1 in
        0x*) wid=$1  ;;
        *)   usage 0 ;;
    esac

    # if file exists then we know a layout is getting opened
    test -f "$WIDLOCK" && exit 0

    focus $wid

    case "$(name $wid)" in
        "WM_CLASS:  not found.")
            return 1
            ;;
        "urxvt")
            position res $wid
            snap tl $wid
            ;;
        "m")
            position res $wid
            snap tl $wid
            windows -a $wid 3
            ;;
        "")
            position. res $wid
            snap tl $wid
            windows -a $wid 3
            ;;
        "tmux")
            position res $wid
            position ext $wid
            snap tl $wid
            windows -a $wid 1
            ;;
        "paste")
            position res $wid
            snap md $wid
            ;;
        "libreoffice")
            position rht $wid
            windows -a $wid 8
            ;;
        "mpsyt")
            position res $wid
            position ext $wid
            snap right $wid
            windows -a $wid 9
            ;;
        "alsamixer")
            position quar $wid
            snap md $wid
            ;;
        *)
    case "$(class $wid)" in
        "google-chrome")
            wtp $(($(wattr x $wid) - BW)) $(($(wattr y $wid) - BW)) \
                $(wattr wh $wid) $wid
            windows -a $wid 2
            ;;
        "mpv")
            snap md $wid
            windows -a $wid 5

            test -f "$MPVPOS" && {
                test -z "$(wid mpv)" && {
                    test ! -f "$FSFILE" && {
                        wtp $(cut -d\  -f -4 < $MPVPOS) $wid
                    }
                }
            } || {
                test "$(resolution $wid | cut -d\  -f 1)" -ge $SW && {
                    position full $wid
                }
                test "$(resolution $wid | cut -d\  -f 2)" -ge  && {
                    position full $wid
                }
            }
            ;;
        "Steam")
            windows -a $wid 7
            ;;
        "TeamSpeak 3")
            snap md $wid
            windows -a $wid 4
            ;;
        # seriously fuck this program
        "telegram")
            position res $wid
            position ext $wid
            windows -a $wid 4
            ;;
        "Wine")
            snap md $wid
            windows -a $wid 6
            ;;
        "MuPDF")
            snap md $wid
            windows -a $wid 6
            ;;
        *)
            snap md $wid
            ;;
    esac
    ;;
    esac
}

main $ARGS
